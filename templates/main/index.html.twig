{% extends 'base.html.twig' %}

{% block title %}Chaussures{% endblock %}

{% block body %}
    <main>
        <div class="max-w-[1264px] mx-auto my-7">
            {% if category %}
                <h1 class="text-3xl font-bold text-center mb-4">Chaussures pour {{ category.getLabel() }}</h1>
            {% endif %}
            <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            {% for shoe in shoes %}
                <div class="flex justify-center">
                    <article class="max-w-[400px] w-full rounded-xl overflow-hidden bg-white shadow-md m-2">
                        <a href="{{ path('app_shoes', {id: shoe.id}) }}">
                            <figure>
                                <img class="h-[250px] w-full object-cover" src="{{ asset(shoe.imageUrl) }}" alt="{{ shoe.title }}">
                                <figcaption class="p-4">
                                    <div>
                                        <p class="text-center">{{ shoe.title }}</p>
                                        <p class="text-right font-bold text-lg mt-2">{{ shoe.price|number_format(2, ',', ' ') }} â‚¬</p>
                                    </div>
                                </figcaption>
                            </figure>
                        </a>
                    </article>
                </div>
            {% endfor %}
            </section>
        </div>
    </main>
{% endblock %}
