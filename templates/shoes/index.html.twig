{% extends 'base.html.twig' %}

{% block title %}{{ shoe.title }}{% endblock %}

{% block body %}
<main class="p-7">
    <section class="max-w-[1280px] bg-white m-auto rounded-xl overflow-hidden">
        <div class="flex">
            <img class="w-[500px] h-[600px] object-cover" src="{{ asset(shoe.imageUrl) }}" alt="{{ shoe.title }}">
            <div class="flex-1 flex flex-col p-5">
                <h1 class="text-center font-bold m-10 text-4xl">{{ shoe.title }}</h1>
                <p class="m-10 flex-1">{{ shoe.description }}</p>
                <p class="m-7 text-right text-4xl font-bold">{{ shoe.price|number_format(2, ',', ' ') }} â‚¬</p>
                <div class="flex flex-col items-end">
                {{ form_start(form) }}
                    {{ form_widget(form._token) }}
                    {{ form_widget(form.waist, {'attr': {'class': 'border-[2px] border-green-500 rounded w-48 p-2 block m-auto text-center'}}) }}
                    {{ form_widget(form.add_to_cart, {'attr': {'class' : 'btn',}}) }}
                    {{ form_errors(form.waist) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </section>
</main>
{% endblock %}
